<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog
      id="sortMasterDialog"
      showHeader= "true"
      contentWidth="33%"
      >
      <customHeader>
          <Toolbar>
	         <Title width="100%" textAlign="Center" text="Ordenar"/>
	     </Toolbar>
      </customHeader>
      <content>
          <VBox>
             <items>
				<HBox width="100%" height="225px" justifyContent="Center" alignItems="Center">
				    <items>
				        <VBox width="100%" justifyContent="Center" alignItems="Center" class="hBoxSortDialog">
						    <items>
								<Text width="100%" textAlign="Left" text="Criterio"/>
								<Select width="100%">
                                    <items>
                                        <core:Item
                                            key="LastName"
                                            text="Last Name"/>
                                        <core:Item
                                            key="FirstName"
                                            text="First Name"/>
                                        <core:Item
                                            key="Address"
                                            text="Address"/>
                                        <core:Item
                                            key="City"
                                            text="City"/>
                                        <core:Item
                                            key="Country"
                                            text="Country"/>
                                    </items>
                                </Select>
                                <Text  width="100%" textAlign="Left" text="Orden"/>
                                <RadioButtonGroup columns="1">
                                    <buttons>
                                        <RadioButton text="Ascendente"/>
                                        <RadioButton text="Descendente"/>
                                    </buttons>
                                </RadioButtonGroup>
						    </items>
						</VBox>
				    </items>
				</HBox>
			</items>
		</VBox>
      </content>
      <buttons>
          <Button
              text="Cancelar"
              type="Reject"
              press="onSortClose"
              />
          <Button
              text="Aceptar"
              type="Accept"
              press="onSortMaster"
              />
      </buttons>
   </Dialog>
</core:FragmentDefinition>