<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="aplication.default.controller.WebServices">
	
	<Page 
		title= "Tablas Datos">
		<Button type="Back" press="onNavBack" />
		
		<Table 	id="idCustomersTable1"
				width="50%"
				hAlign="Left"
				items="{
						path: 'Products>/results'
						}"	>
		<headerToolbar>
				<Toolbar>
					<Title text="Tabla Productos" width= "50%"/>
					<ToolbarSpacer/>
					<SearchField id="searchCustomers" width="50%" liveChange="onFilterCustomers"/>
					<ToolbarSpacer/>
					<Button text= "Ordenar" press= "onChangeOrder"/>
				</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em"
				hAlign="Left">
				<Text text="ProductID" />
			</Column>
			<Column
				width="12em">
				<Text text="ProductName" />
			</Column>
			<Column
				width="12em">
				<Text text="QuantityPerUnit"/>
			</Column>
			<Column
				width="12em">
				<Text text="UnitPrice" />
			</Column>
			<Column
				width="12em"
				hAlign="Right">
				<Text text="UnitsInStock" />
			</Column>
		</columns>
		<items>
			<ColumnListItem 
						title="{ProductID}"
						type= "Active"
						press="onItemSelected">	
				<cells>
					<ObjectIdentifier
						title="{Products>ProductID}"/>
					<Text
						text="{Products>ProductName}"/>
					<Text
						text="{Products>QuantityPerUnit}"/>
					<Text
						text="{Products>UnitPrice}"/>
					<Text
						text="{Products>UnitsInStock}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
